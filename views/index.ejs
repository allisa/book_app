<!DOCTYPE html>
<html>
  <%- include('partials/head'); -%>
<body>
  <div>
    <h1><%= pageTitle %> (<%= count %> titles)</h1>
    <div class="flexContainer">
      <% books.forEach( book => { %>
        <div class="bookCard">
          <img src="<%=book.image_url%>">
          <div>
            <h2><%=book.title %></h2>
            <p><%=book.author %></p>
            <a href="/books/<%= book.id %>"><p>View Book Details</p></a>
          </div>
        </div>
        <% }) %>
      </div>
  </div>
  <h3><a href="/books/newbook">Add a book!</a></h3>
  <h3><a href="/searches/findbook">Find a book!</a></h3>
</body>
</html>